<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/sampleviewpager"
        >

    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/dot"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/sampleviewpager"


        ></LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dot"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:gravity="center"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select the number of tickets"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/tv_selectTicket"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"


                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age 0.9 year"
                    android:textSize="18sp"
                    android:layout_marginLeft="19dp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"





                    />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_background"
                    android:src="@drawable/ic_minus"
                    android:layout_marginLeft="36dp"
                    android:id="@+id/btn_minus_infant"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/tv_count_infant"

                    />
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btnbackground_add"
                    android:src="@drawable/ic_add"
                    android:layout_marginLeft="32dp"
                    android:id="@+id/btn_add_infant"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"


                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age 1-10 year"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_background"
                    android:src="@drawable/ic_minus"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/btn_minus_kids"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/tv_count_kids"
                    />
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btnbackground_add"
                    android:src="@drawable/ic_add"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/btn_add_kids"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"


                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gardian"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="51dp"

                    />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_background"
                    android:src="@drawable/ic_minus"
                    android:layout_marginLeft="31.5dp"
                    android:id="@+id/btn_minus_gardian"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/tv_count_gardian"


                    />
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btnbackground_add"
                    android:src="@drawable/ic_add"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/btn_add_gardian"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"


                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Socks"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="66dp"




                    />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_background"
                    android:src="@drawable/ic_minus"
                    android:layout_marginLeft="32dp"
                    android:id="@+id/btn_minus_soks"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/tv_count_socks"


                    />
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btnbackground_add"
                    android:src="@drawable/ic_add"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/btn_add_socks"
                    />

            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_confirm_background"
                android:layout_marginTop="15dp"
                android:text="Confirm"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:elevation="8dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>